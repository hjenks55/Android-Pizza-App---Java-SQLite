<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_delivery2"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.harry.mad_assignment1_harrisonjenkins_17967352.DeliveryActivity2"
    tools:showIn="@layout/activity_delivery2">
    <TextView
        android:text="Confirm Time:"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView11" />

    <TextView
        android:text="Time:"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="53dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date:"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePicker"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="36dp"
        android:id="@+id/textView13" />

    <TextView
        android:text="Address"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_width="1000sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_toStartOf="@+id/textView11"
        android:layout_marginTop="16dp"
        android:id="@+id/textView14" />

    <DatePicker
        android:layout_width="1000sp"
        android:textColor="#fff"
        android:background="#fff"
        android:layout_height="100sp"
        android:datePickerMode="spinner"

        android:calendarViewShown="false"
        android:id="@+id/datePicker"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/timePicker" />

    <TimePicker
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:timePickerMode="spinner"
        android:background="#fff"
        android:id="@+id/timePicker"

        android:textColor="#fff"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/button16"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textAllCaps="false"

        android:background="@drawable/cancelbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:layout_width="100sp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/datePicker"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginTop="56dp" />

    <Button
        android:text="Next"

        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textAllCaps="false"

        android:background="@drawable/nextbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:id="@+id/button17"

        android:layout_width="100sp"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/button16"
        android:layout_alignBottom="@+id/button16"
        android:layout_toEndOf="@+id/button16" />


</RelativeLayout>
