<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order3"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.harry.mad_assignment1_harrisonjenkins_17967352.OrderActivity3"
    tools:showIn="@layout/activity_order3">

    <TextView
        android:text="Confirm Item:"
        android:textStyle="bold"
        android:textColor="#ffffff"
        tools:fontFamily="casual"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:id="@+id/textView6" />


    <Button
        android:id="@+id/button9"

        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textAllCaps="false"

        android:background="@drawable/cancelbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="65dp" />

    <TextView
        android:text="Pizza description"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pizzaDesc"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:text="Pizza Type"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pizzaText"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginStart="28dp" />

    <Button
        android:id="@+id/button10"

        android:text="Add"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textAllCaps="false"

        android:background="@drawable/nextbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_alignStart="@+id/pizzaText" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="100sp"

        android:background="#ffffff"

        android:id="@+id/numberPicker"

        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/button10" />

    <ImageView
        android:layout_width="175sp"
        android:layout_height="150sp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Qty:"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_above="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:layout_marginBottom="61dp" />


</RelativeLayout>
